#!/bin/bash

BATTERY="/sys/class/power_supply/BAT0"
while sleep 180
do
CHARGE_FULL="`cat $BATTERY/charge_full_design`"
CHARGE_NOW="`cat $BATTERY/charge_now`"
STATUS="`cat $BATTERY/status`"
CHARGE_PERCENT="$(( $CHARGE_NOW * 100 / $CHARGE_FULL ))"
[ $CHARGE_PERCENT -le 10 ] && [ $STATUS == "Discharging" ] && notify-send -h "string:bgcolor:#ff0000" "Battery Low" && sleep 1
done
