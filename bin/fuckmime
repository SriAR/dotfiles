#!/bin/bash

file="$@"
[ "$file" == "" ] && exit

mimetype="$(xdg-mime query filetype "$file")"
terminal="alacritty"

case $mimetype in

    application/pdf)
        zathura --fork "$file"
    ;;

    image/vnd.djvu)
        zathura --fork "$file"
    ;;

    text/x-tex)
        # $terminal -e vim --servername latex "$file"
        alacritty -e nvim "$file"
    ;;

    text/*)
        alacritty -e nvim "$file"
    ;;

    image/*)
        sxiv -b "$file"
    ;;

    inode/directory)
        alacritty --working-directory "$file"
    ;;

    *)
        mimeo "$file"
    ;;
esac
